int stepgo(int x, int y, int i){
  if (x == 1) {
    digitalWrite(DIR, HIGH);
  } elif (x == 0) {
    digitalWrite(DIR, LOW);
  }
  for (int y = 0; y < i; y++){
    pinMode(STEP, HIGH);
    delayMicroseconds();
    pinMode(STEP, LOW);

